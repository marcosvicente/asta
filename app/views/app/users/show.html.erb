<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <div class="row">
            <div class="col-md-12"> 
              <div class="mb-1">
                <strong>Email:</strong>

                <%= @user.email %>
              </div>
            </div>
            <div class="col-md-12"> 
              <div class="mb-1">
                <strong>Status:</strong>

                <%= @user.human_kind %>
              </div>
            </div>
            <%= link_to I18n.t('views.edit') , edit_app_user_path(@user), class:"btn btn-primary waves-effect waves-float waves-light"  %>
          </div>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h4>
          <%= I18n.t('views.import.lasted') %>
        </h4>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-12"> 
          <% if @import.present? %>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>
                      <%= I18n.t('activerecord.attributes.import.name') %>
                    </th>
                    <th>
                      <%= I18n.t('activerecord.attributes.import.status') %>
                    </th>
                    <th>
                      <%= I18n.t('activerecord.attributes.import.user') %>
                    </th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                  <tbody>
                    <% @import.each do |import| %>
                    <tr>
                    <td><%= import.name %></td>
                    <td>
                      <% if import.status == "enqueued" %>
                        <span class="badge rounded-pill badge-light-secondary me-1">
                        <%= import.human_status %>
                        </span>
                      <% elsif import.status == "processing" %>
                        <span class="badge rounded-pill badge-light-primary me-1">
                        <%= import.human_status %>
                        </span>
                      <% elsif import.status == "done" %>
                        <span class="badge rounded-pill badge-light-success me-1">
                        <%= import.human_status %>
                        </span>
                      <% end %>
                        </span>
                    </td>
                    <td><%= import.user.email %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
            <% else %>
            <span> 
              <%= I18n.t('views.import.not') %>
            </span>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>


